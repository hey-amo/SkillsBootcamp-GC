<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <title>Edit Movie - <%= movie.title %></title>
</head>
<body>
    <header>
        <nav>
            <p><a href="/">Home</a> &gt; Edit movie</p>
        </nav>

        <h1>Edit Movie</h1>
    </header>
    
    <section id="viewMovieSection">
        <div>
            <h2>Editing: <%= movie.title %></h2>
        
            <form action="/edit/<%= movie._id %>" method="POST">
            <table>
                <tr>
                    <td class="bold">Title:</td>
                    <td>
                        <input type="text" name="title" value="<%= movie.title || '' %>" required>
                    </td>
                </tr>
                
                <tr>
                    <td class="bold">Year:</td>
                    <td>
                        <input type="number" name="year" value="<%= movie.year || '' %>" min="1800" max="2030">
                    </td>
                </tr>
                
                <tr>
                    <td class="bold">Director:</td>
                    <td>
                        <input type="text" name="director" value="<%= movie.director || '' %>">
                    </td>
                </tr>
                
                <tr>
                    <td class="bold">Type:</td>
                    <td>
                        <select name="type">
                            <option value="">Select Type</option>
                            <option value="Movie" <%= movie.type === 'Movie' ? 'selected' : '' %>>Movie</option>
                            <option value="Series" <%= movie.type === 'Series' ? 'selected' : '' %>>TV Series</option>
                            <option value="Documentary" <%= movie.type === 'Documentary' ? 'selected' : '' %>>Documentary</option>
                        </select>
                    </td>
                </tr>
                
                <tr>
                    <td class="bold">IMDB Rating:</td>
                    <td>
                        <input type="text" name="imdbRating" value="<%= movie.imdbRating || '' %>" placeholder="e.g., 8.5" style="width: 100%; padding: 5px;">
                    </td>
                </tr>
                
                <tr>
                    <td class="bold">Poster URL:</td>
                    <td>
                        <input type="url" name="poster" value="<%= movie.poster || '' %>" placeholder="https://..." style="width: 100%; padding: 5px;">
                    </td>
                </tr>
                
                <tr>
                    <td class="bold">Cast:</td>
                    <td>
                        <textarea name="cast" rows="4" placeholder="Enter actor names separated by commas"><%= movie.cast && Array.isArray(movie.cast) ? movie.cast.join(', ') : '' %></textarea>
                        <small style="color: #666;">Enter actor names separated by commas</small>
                    </td>
                </tr>
            </table>
            
            <div class="marginTop20">
                <button type="submit" class="updateBtn">Update Movie</button>
                <a href="/movies/<%= movie._id %>" class="cancelBtn">Cancel</a>
            </div>
            </form>

            <section class="currentData">
                <h3>Current Data:</h3>
                <p><strong>Title:</strong> <%= movie.title %></p>
                <% if (movie.year) { %><p><strong>Year:</strong> <%= movie.year %></p><% } %>
                <% if (movie.director) { %><p><strong>Director:</strong> <%= movie.director %></p><% } %>
                <% if (movie.type) { %><p><strong>Type:</strong> <%= movie.type %></p><% } %>
                <% if (movie.imdbRating) { %><p><strong>IMDB Rating:</strong> <%= movie.imdbRating %></p><% } %>
                <% if (movie.cast && movie.cast.length > 0) { %><p><strong>Cast:</strong> <%= movie.cast.join(', ') %></p><% } %>           
            </section>
        </div>
    </section>
</body>
</html>